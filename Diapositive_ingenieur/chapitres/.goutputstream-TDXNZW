\begin{frame}
\frametitle{Contexte de travail}
\framesubtitle{Caractéristiques générales de la carte acoustique}
	\begin{figure}
	\includegraphics[scale = 0.3]{images/carteinside}	
	%\caption{Schéma d'une carte acoustique}
	\end{figure}

	\begin{block}{L'électronique embarquée est composée des éléments}
	\begin{itemize}
	\item Intégrés sur un circuit imprimé flexible, ou « flex »
	\item Soudés au « flex » par un processus de capillarité
	\item Flex composants est appelé Inlay
	\item Intégré à l'intérieur de la carte PVC
	\end{itemize}
	\end{block}
\end{frame}

